<Page x:Class="WpfApp.Pages.admin.ReviewsOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Pages.admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReviewsOverviewPage">

    <Grid>
        <StackPanel>
            <TextBox Text="Отзывы" d:Foreground="White" Margin="5,10" FontSize="16" FontWeight="Bold"/>
            <DataGrid Name="DataGridReviews" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ReviewID}" Width="*"/>
                    <DataGridTextColumn Header="ID транспорта" Binding="{Binding VehicleID}" Width="*"/>
                    <DataGridTextColumn Header="ID пользователя" Binding="{Binding UserID}" Width="*"/>
                    <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="*"/>
                    <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="*"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding CreatedAt}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
